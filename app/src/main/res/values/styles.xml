<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBase" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">100dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:paddingEnd">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingTop">10sp</item>
    </style>

    <style name="ButtonNoBackground" parent="ButtonBase">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AddButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/background_button</item>
        <item name="elevation">4sp</item>
        <item name="android:textColor">@color/text_color_on_dark</item>
        <item name="android:textSize">25sp</item>
    </style>



</resources>