<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleButtonScreen" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">25dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ScreenHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="Item" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Item.Quantity" parent="Item">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item.Settings" parent="Item.Quantity"/>


</resources>