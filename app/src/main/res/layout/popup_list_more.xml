<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background_popup"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4sp"
        android:padding="16dp">

        <Button
            android:id="@+id/btnRenameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:iconSize="20dp"
            android:text="@string/renameList"
            app:icon="@drawable/rename"/>

        <Button
            android:id="@+id/btnClearList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRenameList"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/btnRenameList"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            app:iconSize="20dp"
            android:text="@string/clearList"/>

        <Button
            android:id="@+id/btnDeleteList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnClearList"
            android:layout_alignEnd="@+id/btnRenameList"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            app:icon="@drawable/delete"
            android:text="@string/deleteList"
            app:iconSize="20dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>